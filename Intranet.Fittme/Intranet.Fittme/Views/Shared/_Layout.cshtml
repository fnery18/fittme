<!DOCTYPE html>
<html style="width: 100% !important;height: 100% !important;">
<head>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @RenderSection("styles")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/fonts/material-design-iconic-font.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FITT.ME", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewContext.RouteData.Values["Action"].ToString() != "Login")
                    {
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"><a href="~/Intranet/    ">Home <span class="sr-only">(current)</span></a></li>
                        <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().ToLower().Contains("produto") ? "active" : "")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Produtos <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="~/Intranet/Produto">Cadastrar</a></li>
                                <li><a href="~/Intranet/ListarProdutos">Listar</a></li>
                                @*<li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">One more separated link</a></li>*@
                            </ul>
                        </li>
                        <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().ToLower().Contains("cliente") ? "active" : "")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Clientes <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="~/Intranet/Cliente">Cadastrar</a></li>
                                <li><a href="~/Intranet/ListarClientes">Listar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().ToLower().Contains("venda") ? "active" : "")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Vendas <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="~/Intranet/Venda">Cadastrar</a></li>
                                <li><a href="~/Intranet/ListarVendas">Listar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().ToLower().Contains("fornecedor") ? "active" : "")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Fornecedores <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="~/Intranet/Fornecedor">Cadastrar</a></li>
                                <li><a href="~/Intranet/ListarFornecedores">Listar</a></li>
                            </ul>
                        </li>
                        <li class="dropdown @(ViewContext.RouteData.Values["Action"].ToString().ToLower().Contains("usuario") ? "active" : "")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Usuarios <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="~/Intranet/Usuario">Cadastrar</a></li>
                                <li><a href="~/Intranet/ListarUsuarios">Listar</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="main">
        <div id="alert-helper" style="z-index: 99999999;"></div>
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-bootstrap/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-bootstrap/bootstrap.min.js"></script>
    <script src="~/Scripts/alert.js"></script>
    @RenderSection("scripts")
</body>
</html>