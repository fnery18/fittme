@model List<Intranet.Fittme.Models.CorModel>

<div class="table">
    <div class="row header">
        <div class="cell">
            Codigo
        </div>
        <div class="cell">
            Codigo da Cor
        </div>
        <div class="cell">
            Nome
        </div>
        <div class="cell">
            Cor
        </div>
        <div class="cell">
            Opções
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {

            <div class="row">
                <div class="cell" data-title="Codigo">
                    @item.Codigo
                </div>
                <div class="cell" data-title="CodigoCor">
                    @item.Codigo_Cor
                </div>
                <div class="cell" data-title="Nome">
                    @item.Nome
                </div>
                <div class="cell" data-title="Cor">
                    @item.Cor
                </div>
                <div class="cell" data-title="Opcao">

                    <a data-opcao="editarCor" data-nome="@item.Nome" data-codigo="@item.Codigo" data-cor="@item.Cor" data-codigocor="@item.Codigo_Cor" data-toggle="tooltip" data-placement="bottom" title="Editar">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>&nbsp;
                    <a data-opcao="cadastrarCor" data-toggle="tooltip" data-placement="bottom" title="Cadastrar novo">
                        <i class="glyphicon glyphicon-plus"></i>
                    </a>&nbsp;
                    <a data-opcao="excluirCor" data-nome="@item.Nome" data-Codigo="@item.Codigo" data-toggle="tooltip" data-placement="bottom" title="Excluir">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="cell">Nenhuma cor cadastrada.</div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell">
                <a data-opcao="cadastrarCor" data-toggle="tooltip" data-placement="bottom" title="Cadastrar novo">
                    <i class="glyphicon glyphicon-plus"></i>
                </a>&nbsp;
            </div>
        </div>
    }


</div>
